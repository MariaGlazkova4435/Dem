<Window x:Class="Dem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Просмотреть заявки" Click="View"/>
            <Button Content="Создать новую заявку" Click="View"/>
            <Button Content="Создать нового клиента" Click="View"/>
            <Button Content="Отчеты" Click="View"/>
            <Button Content="Заказать детали" Click="View"/>
            <Button Content="Назначить мастера" Click="View"/>
        </StackPanel>
    </Grid>
</Window>
